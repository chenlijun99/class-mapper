{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": ".tmp",
    "newLine": "LF",
    "sourceRoot": "src",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "importHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": ".tmp"
  },
  "exclude": [
    "test",
    "node_modules",
    "dist",
    ".tmp"
  ]
}
